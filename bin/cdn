#!/usr/bin/env node

const { Command } = require('commander');
const { yellow, red } = require('kleur');
const path = require('path');
const pkg = require('../package.json');

const program = new Command();

program.version(pkg.version);

program
  .name('init')
  .description(yellow('初始化'))
  .action(() => {
    require('../lib/utils/file')
      .canCopyFile(path.resolve('./cdn.config.mjs'))
      .then(() => {
        require('../lib/utils/file').copyFileSync(
          path.resolve(__dirname, '../templates/cdn.config.mjs'),
          path.resolve('./cdn.config.mjs'),
        );
      })
      .catch(() => {
        red('cdn.config.mjs 文件已存在');
      });
  });

program
  .command('deploy <environment>')
  .description(yellow('上传资源'))
  .action((environment) => {
    require('../lib').deploy(environment);
  });

program.on('--help', () => {
  console.log();
  console.log('  例子:');
  console.log();
  console.log('    $ cdn init');
  console.log('    $ cdn deploy development');
});

program.parse(process.argv);
